<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TournamentDetailsForPlayerActivity">
    <TextView
        android:id="@+id/tournament_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Category:"
        app:layout_constraintTop_toBottomOf="@id/tournament_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/category"
        />
    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tournament_name"
        app:layout_constraintLeft_toRightOf="@id/tv_category"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_difficulty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Difficulty:"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/difficulty"
        />
    <TextView
        android:id="@+id/difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/category"
        app:layout_constraintLeft_toRightOf="@id/tv_difficulty"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>
    <TextView
        android:id="@+id/start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/difficulty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    />
    <TextView
        android:id="@+id/end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    />
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/end_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    />
    <TextView
        android:id="@+id/likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </TextView>
    <ImageView
        android:id="@+id/thumb_up"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/thumbup"
        app:layout_constraintTop_toBottomOf="@id/likes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/thumb_down"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/thumb_down"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/thumbdown"
        app:layout_constraintTop_toBottomOf="@id/likes"
        app:layout_constraintLeft_toRightOf="@id/thumb_up"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        />
